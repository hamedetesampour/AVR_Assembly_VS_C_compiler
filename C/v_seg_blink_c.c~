

#include <mega32.h>
#include <delay.h>


void main(void)
{
DDRA=255;

while (1)
      {
              PORTA.2=1;
        delay_ms(500);
        PORTA.2=0;
        delay_ms(500);
        PORTA.3=1;
        delay_ms(500);
        PORTA.3=0;
        delay_ms(500);
        PORTA.6=1;
        delay_ms(500);
        PORTA.6=0;
        delay_ms(500);
        PORTA.5=1;
        delay_ms(500);
        PORTA.5=0;
        delay_ms(500);
        PORTA.4=1;
        delay_ms(500);
        PORTA.4=0;
        delay_ms(500);
        PORTA.1=1;
        delay_ms(500);
        PORTA.1=0;
        delay_ms(500);
        PORTA.0=1;
        delay_ms(500);
		PORTA.0=0;
		delay_ms(500);
		PORTA=255;
		delay_ms(500);
		PORTA=0;
		delay_ms(500);	
      }
}
